{
  "name": "HabitRPG Mini",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "A minimalistic HabitRPG extension",
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_title": "HabitRPG Mini",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }

}
